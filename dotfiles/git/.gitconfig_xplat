[core]
    autocrlf = false
    pager = less -X -F
[init]
    defaultBranch = main
[difftool]
    prompt = false
[mergetool]
    keepbackup = false
[push]
    default = current
[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold yellow)<%an>%Creset' --abbrev-commit --date=relative
    rbi = rebase -i main
    rbc = rebase --continue
    amend = "!git add -A && git commit --amend --no-edit"
    wip = "!git add -A && git commit -m \"WIP\""